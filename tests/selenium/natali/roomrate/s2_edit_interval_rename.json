{
  "type": "script",
  "seleniumVersion": "2",
  "formatVersion": 2,
  "steps": [
    {
      "type": "store",
      "text": "http://wwwdev3.ondeficar.com",
      "variable": "site_name"
    },
    {
      "type": "store",
      "text": "selenium@cloudbeds.com",
      "variable": "user_login"
    },
    {
      "type": "store",
      "text": "testTime!",
      "variable": "user_pass"
    },
    {
      "type": "get",
      "url": "${site_name}/auth/login"
    },
    {
      "type": "setElementText",
      "locator": {
        "type": "id",
        "value": "email"
      },
      "text": "${user_login}"
    },
    {
      "type": "setElementText",
      "locator": {
        "type": "id",
        "value": "password"
      },
      "text": "${user_pass}"
    },
    {
      "type": "clickElement",
      "locator": {
        "type": "xpath",
        "value": "//div[@class='form-actions']//button[normalize-space(.)='Login']"
      }
    },
    {
      "type": "waitForCurrentUrl",
      "url": "${site_name}/connect/366#/dashboard"
    },
    {
      "type": "store",
      "text": "roomRates",
      "variable": "hash"
    },
    {
      "type": "clickElement",
      "locator": {
        "type": "name",
        "value": "arates"
      }
    },
    {
      "type": "clickElement",
      "locator": {
        "type": "link text",
        "value": "Best Available Rate"
      }
    },
    {
      "type": "waitForElementAttribute",
      "locator": {
        "type": "id",
        "value": "layout"
      },
      "attributeName": "data-current_view",
      "value": "${hash}"
    },
    {
      "type": "assertElementAttribute",
      "locator": {
        "type": "id",
        "value": "layout"
      },
      "attributeName": "data-current_view",
      "value": "${hash}"
    },
    {
      "type": "clickElement",
      "locator": {
        "type": "css selector",
        "value": "li.base.active > a"
      }
    },
    {
      "type": "clickElement",
      "locator": {
        "type": "xpath",
        "value": "//div[@id='tab_0']/form/div[6]/div/div[2]/table/tbody/tr[4]/td[7]/a[1]/i"
      }
    },
    {
      "type": "verifyElementPresent",
      "locator": {
        "type": "css selector",
        "value": "#tab_0 .new_interval_form:not(.hide)"
      }
    },
    {
      "type": "store",
      "text": "Selenium Interval",
      "variable": "new_interval_name"
    },
    {
      "type": "storeElementValue",
      "locator": {
        "type": "name",
        "value": "interval_name"
      },
      "variable": "old_interval_name"
    },
    {
      "type": "setElementText",
      "locator": {
        "type": "name",
        "value": "interval_name"
      },
      "text": "${new_interval_name}"
    },
    {
      "type": "clickElement",
      "locator": {
        "type": "css selector",
        "value": "#tab_0  .save_add_interval"
      }
    },
    {
      "type": "waitForTextPresent",
      "text": "${new_interval_name}"
    },
    {
      "type": "assertText",
      "locator": {
        "type": "css selector",
        "value": "#tab_0 .intervals-table tr:not(.clonable):not(.empty) .interval_name .interval_text"
      },
      "text": "${new_interval_name}"
    },
    {
      "type": "clickElement",
      "locator": {
        "type": "xpath",
        "value": "//div[@class='pull-line-right']//a[.=' Save']"
      }
    },
    {
      "type": "waitForElementAttribute",
      "locator": {
        "type": "css selector",
        "value": ".savingMsg"
      },
      "attributeName": "data-qe-id",
      "value": "saved"
    },
    {
      "type": "refresh",
      "step_name": "Refresh page and check that we have new interval name"
    },
    {
      "type": "print",
      "text": "${new_interval_name}"
    },
    {
      "type": "print",
      "text": "${old_interval_name}"
    },
    {
      "type": "assertText",
      "locator": {
        "type": "css selector",
        "value": "#tab_0 .intervals-table tr:not(.clonable):not(.empty) .interval_name .interval_text"
      },
      "text": "${new_interval_name}"
    },
    {
      "type": "clickElement",
      "step_name": "Try to restore old interval name",
      "locator": {
        "type": "xpath",
        "value": "//div[@id='tab_0']/form/div[6]/div/div[2]/table/tbody/tr[4]/td[7]/a[1]/i"
      }
    },
    {
      "type": "setElementText",
      "locator": {
        "type": "name",
        "value": "interval_name"
      },
      "text": "${old_interval_name}"
    },
    {
      "type": "clickElement",
      "locator": {
        "type": "css selector",
        "value": "#tab_0  .save_add_interval"
      }
    },
    {
      "type": "clickElement",
      "locator": {
        "type": "xpath",
        "value": "//div[@class='pull-line-right']//a[.=' Save']"
      }
    },
    {
      "type": "waitForElementAttribute",
      "locator": {
        "type": "css selector",
        "value": ".savingMsg"
      },
      "attributeName": "data-qe-id",
      "value": "saved"
    },
    {
      "type": "refresh"
    },
    {
      "type": "assertText",
      "step_name": "Verify old interval name after refresh",
      "locator": {
        "type": "css selector",
        "value": "#tab_0 .intervals-table tr:not(.clonable):not(.empty) .interval_name .interval_text"
      },
      "text": "${old_interval_name}"
    },
    {
      "type": "clickElement",
      "locator": {
        "type": "name",
        "value": "asettings"
      }
    },
    {
      "type": "clickElement",
      "locator": {
        "type": "css selector",
        "value": "a.logout_link"
      }
    },
    {
      "type": "waitForElementPresent",
      "locator": {
        "type": "css selector",
        "value": "div.login"
      }
    }
  ],
  "data": {
    "configs": {},
    "source": "none"
  },
  "inputs": [],
  "timeoutSeconds": 60
}